classe retangulo
    variavel base_retangulo
    variavel altura_retangulo
    
    funcao definir(base_retangulo, altura_retangulo)
        base_retangulo = definir base do retangulo
        altura_retangulo = definir altura do retangulo

    função calcularÁrea()
        retornar base_retangulo * altura_retangulo

fim classe

classe triangulo
    variavel base_triangulo
    variavel altura_triangulo

    função definir(base_triangulo, altura_triangulo)
        base_triangulo = definir base do triangulo
        altura_triangulo = definir altura do triangulo

    função calcularÁrea()
        retornar (base_triangulo * altura_triangulo) / 2

fim classe

classe circulo
    variavel raio_circulo

    funcao definir(raio_circulo)
        raio_circulo = definir raio do circulo

    funcao calcularÁrea()
        const pi = 3.14159265359
        retornar pi * raio_circulo * raio_circulo

fim classe

função main()
    exibir "bem-vindo ao pseudocodigo geometrico!"

    escolha = 0
    enquanto escolha != 4
        exibir "escolha uma forma geometrica:"
        exibir "1. retângulo"
        exibir "2. triângulo"
        exibir "3. círculo"
        exibir "4. sair"
        
        escolha = lerInteiro("digite o número da forma desejada: ")
        
        se escolha == 1
            base_retangulo = lerFloat("Digite a base do retângulo: ")
            altura_retangulo = lerFloat("Digite a altura do retângulo: ")
            retangulo = novo Retangulo(base_retangulo, altura_retangulo)
            área = retangulo.calcularÁrea()
            exibir "A área do retângulo é:", área
        senão se escolha == 2
            base_triangulo = lerFloat("Digite a base do triângulo: ")
            altura_triangulo = lerFloat("Digite a altura do triângulo: ")
            triangulo = novo Triangulo(base_triangulo, altura_triangulo)
            área = triangulo.calcularÁrea()
            exibir "A área do triângulo é:", área
        senão se escolha == 3
            raio_circulo = lerFloat("Digite o raio do círculo: ")
            círculo = novo Circulo(raio_circulo)
            área = círculo.calcularÁrea()
            exibir "A área do círculo é:", área
        senão se escolha != 4
            exibir "obrigado por usar pseudocodigo geometrico!"
fim função